@using OdeToFood.Models
@model OdeToFood.Models.Restaurant
 
 @{
     Layout = null;
 }
 
 <!DOCTYPE html>
 
 <html>
 <head>
     <title>Home</title>
 </head>
 <body>
 <div>
     <h2>Create</h2>
     @*You should change this form and use razor tags*@
         @using (Html.BeginForm())
         {
             <div>
                 @Html.LabelFor(m=>m.Name)
                 @Html.TextBoxFor(m => m.Name)
                 @Html.ValidationMessageFor(m=>m.Name)
             </div>

             <div>
                 @Html.LabelFor(m=>m.Cuisine)
                 @Html.DropDownListFor(m=>m.Cuisine, Html.GetEnumSelectList(typeof(CuisineType)))
                 @Html.ValidationMessageFor(m=>m.Cuisine)
             </div>
             <div>
                 <input type="submit" value="Save">
             </div>

         }

</div>
 </body>
 </html>
